# SMS Bridge - Coolify Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# PostgreSQL Database
# ===========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_DB=sms_bridge

# ===========================================
# Redis Cache
# ===========================================
REDIS_PASSWORD=your_secure_redis_password_here

# ===========================================
# SMS Receiver Application
# ===========================================
# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ===========================================
# Admin Security (CRITICAL!)
# ===========================================
# Secret required to create admin users via CLI script
# Generate with: openssl rand -hex 32
# KEEP THIS SECRET! Remove from server after creating first admin.
SMS_BRIDGE_ADMIN_CREATION_SECRET=your_admin_creation_secret_here

# Lock admin creation after first admin exists (recommended: True)
# Set to False only if you need to create multiple admins
SMS_BRIDGE_ADMIN_CREATION_LOCKDOWN=True

# ===========================================
# Monitoring - Grafana
# ===========================================
GRAFANA_ADMIN_PASSWORD=your_grafana_admin_password

# ===========================================
# Port Configuration (Optional)
# Change these if you have port conflicts
# ===========================================
SMS_RECEIVER_PORT=8080
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
