# SMS Bridge - Coolify Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# PostgreSQL Database
# ===========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_DB=sms_bridge

# ===========================================
# Redis Cache
# ===========================================
REDIS_PASSWORD=your_secure_redis_password_here

# ===========================================
# SMS Receiver Application
# ===========================================
# Backend API Integration
CF_API_KEY=your_cloudflare_or_backend_api_key
CF_BACKEND_URL=https://your-backend.com/api

# Security - HMAC hash secret for validation
HASH_SECRET_KEY=your_hmac_secret_key_here

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ===========================================
# Monitoring - Grafana
# ===========================================
GRAFANA_ADMIN_PASSWORD=your_grafana_admin_password

# ===========================================
# Port Configuration (Optional)
# Change these if you have port conflicts
# ===========================================
SMS_RECEIVER_PORT=8080
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
