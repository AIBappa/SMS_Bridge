# SMS Bridge - Coolify Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# PostgreSQL Database
# ===========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_DB=sms_bridge

# ===========================================
# Redis Cache
# ===========================================
REDIS_PASSWORD=your_secure_redis_password_here

# ===========================================
# SMS Receiver Application
# ===========================================
# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ===========================================
# Admin UI Credentials (CRITICAL!)
# ===========================================
# Admin user will be auto-created on startup if credentials are set
# and user doesn't exist yet. Keep these secure!
SMS_BRIDGE_ADMIN_USERNAME=admin
SMS_BRIDGE_ADMIN_PASSWORD=ChangeThisSecurePassword123!

# Secret key for admin session signing and CSRF protection.
# Required in production. Generate with: openssl rand -hex 32
SMS_BRIDGE_ADMIN_SECRET_KEY=generate_a_64_char_hex_secret_key

# ===========================================
# Monitoring - Grafana
# ===========================================
GRAFANA_ADMIN_PASSWORD=your_grafana_admin_password

# ===========================================
# Port Configuration (Optional)
# Change these if you have port conflicts
# ===========================================
SMS_RECEIVER_PORT=8080
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
