# SMS Bridge Monitoring Configuration
# Copy this file to .env and update with your actual values

# SMS Bridge Server URL (required)
# Example: https://sms-bridge.yourdomain.com
SMS_BRIDGE_URL=https://your-domain.com

# Grafana Admin Credentials (optional)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change-this-password

# PostgreSQL Connection (optional - for DBeaver)
# These are used only if you want to connect directly to the database
POSTGRES_HOST=your-server-ip
POSTGRES_PORT=5433
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-db-password
POSTGRES_DB=sms_bridge

# Redis Connection (optional - for Redis Desktop Manager)
REDIS_HOST=your-server-ip
REDIS_PORT=6380
REDIS_PASSWORD=your-redis-password
